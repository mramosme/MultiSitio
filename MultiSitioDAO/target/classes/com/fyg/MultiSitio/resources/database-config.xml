<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

<typeAliases>
		<typeAlias alias="Contacto" type="com.fyg.MultiSitioDTO.Contacto"/>
		<typeAlias alias="Galeria" type="com.fyg.MultiSitioDTO.Galeria"/>
		<typeAlias alias="Sitio" type="com.fyg.MultiSitioDTO.Sitio"/>
		<typeAlias alias="Zona" type="com.fyg.MultiSitioDTO.Zona"/>
		<typeAlias alias="Negocio" type="com.fyg.MultiSitioDTO.Negocio"/>
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/fyg/MultiSitio/resources/OperacionesMultiSitioDAO.xml" />
		<mapper resource="com/fyg/MultiSitio/resources/ConsultasMultiSitioDAO.xml" />
	</mappers>
	
</configuration>